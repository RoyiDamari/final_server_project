# ============================
# Database (PostgreSQL)
# ============================

POSTGRES_DB=app_db
POSTGRES_USER=app_user
POSTGRES_PASSWORD=change_me

# SQLAlchemy async database URL
# Format:
# postgresql+asyncpg://<user>:<password>@<host>:<port>/<db>
DATABASE_URL=postgresql+asyncpg://app_user:change_me@postgres_db:5432/app_db


# ============================
# Redis
# ============================

# Redis connection string
REDIS_URL=redis://redis:6379/0


# ============================
# API / Networking
# ============================

# Base URL used by the Streamlit UI to reach the FastAPI backend
API_BASE_URL=http://fastapi_app:8000


# ============================
# Authentication / Security
# ============================

# JWT signing secret (MUST be changed in real deployments)
SECRET_KEY=change_this_secret_key

# JWT signing algorithm
ALGORITHM=HS256


# ============================
# OpenAI / ChatGPT (Optional)
# ============================

# Optional: only required if using the "Ask ChatGPT" features
OPENAI_API_KEY=

# OpenAI API endpoint
OPENAI_API_URL=https://api.openai.com/v1/chat/completions
